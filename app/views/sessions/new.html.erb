<div class="h-screen flex items-center justify-center">
    <div>
        <div class="relative">
            <div class="bg-red-700 text-white text-center absolute p-6 rounded-full text-6xl top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-[75px]">
                <i class="fa-solid fa-user"></i>
            </div>
        </div>
        <%= form_with url: sessions_path do |f| %>
            <div class="bg-white rounded-3xl text-center p-10 pt-20">
                <% if flash[:alert].present? %>
                    <div class="bg-red-200 rounded-md border-solid border-2 border-red-300 p-3 text-red-950"><%= flash[:alert] %></div>
                    <br />
                <% end %>

                <% if flash[:username_error].present? %>
                    <div class="bg-red-200 rounded-md border-solid border-2 border-red-300 py-2 text-red-950"><%= flash[:username_error] %></div>
                    <br />
                <% end %>

                <% if flash[:password_error].present? %>
                    <div class="bg-red-200 rounded-md border-solid border-2 border-red-300 py-2 text-red-950"><%= flash[:password_error] %></div>
                    <br />
                <% end %>
                <%= f.text_field(:username, class: "rounded-lg bg-gray-100 border-none", placeholder: "User ID") %>
                <br />
                <br />
                <%= f.text_field(:password, class: "rounded-lg bg-gray-100 border-none", placeholder: "Password") %>
                <br />
                <br />
                <button type="submit" class="bg-red-700 text-white text-xl rounded-lg py-2 px-24">LOGIN</button>
                <br />
                <br />
                <p class="text-gray-500">Forgot <span class="text-red-700 cursor-pointer hover:underline">Password ?</span></p>
                <p class="text-gray-500">New here ? <span class="text-red-700 cursor-pointer hover:underline"><a href="<%= new_user_path %>">Create an account !</a></span></p>
            </div>
         <% end %>
    </div>
</div>