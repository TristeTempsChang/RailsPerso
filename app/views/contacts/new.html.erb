<div class="flex justify-around mt-28 animate fadeIn one">
    <div>
        <h1 class="text-8xl mb-14">Contact us</h1>
        <%= form_with model: @contact, url: contacts_path, method: :post do |f| %>
            <div>
                <% if flash[:email_error].present? %>
                    <div class="bg-red-200 rounded-md border-solid border-2 border-red-300 py-2 text-red-950"><%= flash[:email_error] %></div>
                    <br />
                <% end %>
                
                <% if flash[:name_error].present? %>
                    <div class="bg-red-200 rounded-md border-solid border-2 border-red-300 py-2 text-red-950"><%= flash[:name_error] %></div>
                    <br />
                <% end %>

                <% if flash[:message_error].present? %>
                    <div class="bg-red-200 rounded-md border-solid border-2 border-red-300 py-2 text-red-950"><%= flash[:message_error] %></div>
                    <br />
                <% end %>
                <%= f.text_field(:email, class: "rounded-full w-full text-xl border-none", placeholder: "Email") %>
                <br />
                <br />
                <%= f.text_field(:nom, class: "rounded-full w-full text-xl border-none", placeholder: "Name") %>
                <br />
                <br />
                <%= f.text_area(:message, class: "rounded-3xl w-full text-xl border-none", placeholder: "Message") %>
                <br />
                <br />
                <button type="submit" class="bg-[#832020] hover:bg-red-500 duration-500 cursor-pointer text-white font-bold py-2 px-4 rounded-full text-lg">Send Message</button>
            </div>
        <% end %>
    </div> 
    <%= image_tag 'contact.png', alt: 'send logo' %>
</div>